<p id="notice"><%= notice %></p>

<div class="newEventButton">
  <h2><%= link_to 'New Event', new_event_path %></h2>
</div>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Event name: </th>
      <th>Event place: </th>
      <th>Purpose: </th>
      <th>Event date: </th>
      <th>Max visitors: </th>
      <th>Actions: </th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %><br>
        <td><%= event.place %><br>
        <td><%= event.purpose %><br>
        <td><%= event.date_time %><br>
        <td><%= event.max_visitors_number %><br>
        <% if current_user.id == event.user_id || following_event?(event.id) %>
          <td><%= link_to 'Show', event %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


